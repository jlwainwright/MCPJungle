# MCPJungle Environment Configuration Example
# Copy this file to .env and modify the values as needed

# Debug Level
# Options: debug, info, warn, error
DEBUG_LEVEL=info

# Database Configuration
# For PostgreSQL (recommended for production)
DATABASE_URL=postgres://mcpjungle:mcpjungle@localhost:5432/mcpjungle
# For SQLite (development/testing)
# DATABASE_URL=

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Memory Profiling (for debugging and performance analysis)
# Set to true to enable Go's pprof profiling server
ENABLE_PPROF=false
PPROF_PORT=6060

# Logging Configuration
LOG_FORMAT=json
LOG_OUTPUT=stdout

# MCP Client Configuration
MCP_CLIENT_TIMEOUT=30s
MCP_CONNECTION_POOL_SIZE=10

# Performance Settings
MAX_REQUEST_SIZE=10MB
ENABLE_METRICS=true

# Development Settings
# Set to true to initialize example servers on startup
INIT_EXAMPLE_SERVERS=true